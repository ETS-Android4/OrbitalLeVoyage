<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.CalendarEventEditFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Trip Name:"
            android:textAlignment="center"
            android:textColor="@color/light_blue_2"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/tripName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:ems="10"
            android:inputType="text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Trip Location:"
            android:textAlignment="center"
            android:textColor="@color/light_blue_2"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/tripLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:ems="10"
            android:inputType="text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Trip Description:"
            android:textAlignment="center"
            android:textColor="@color/light_blue_2"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/tripDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:ems="10"
            android:inputType="text"/>

        <TextView
            android:id="@+id/StartDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Start Date:"
            android:textAlignment="center"
            android:textColor="@color/light_blue_2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/StartDateButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="JAN 01 2020"
            android:textSize="30sp"
            android:textColor="@color/light_blue_2"
            style="?android:spinnerStyle"
            android:layout_gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/StartDateTV"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/EndDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="End Date:"
            android:textAlignment="center"
            android:textColor="@color/light_blue_2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/EndDateButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="JAN 01 2020"
            android:textSize="30sp"
            style="?android:spinnerStyle"
            android:textColor="@color/light_blue_2"
            android:layout_gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EndDateTV"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/createNewTripButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_new_trip"
            android:layout_gravity="center"
            android:textSize="20sp"
            />
    </LinearLayout>

</FrameLayout>